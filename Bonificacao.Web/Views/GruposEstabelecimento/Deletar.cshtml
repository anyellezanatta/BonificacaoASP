@model Bonificacao.Data.GrupoEstabelecimento
@{ ViewBag.Title = "Deletar"; }

@Html.Box("Deletar Grupo", null,
    @<text>
        <h3>Tem certeza que deseja remover esse item?</h3>
        <div>
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd>@Html.DisplayFor(model => model.Nome)</dd>
            </dl>
