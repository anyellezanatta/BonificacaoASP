@model IEnumerable<Bonificacao.Data.Estabelecimento>

@{
    ViewBag.Title = "Estabelecimentos";
}

<h2>Estabelecimentos</h2>

<p>
    @Html.ActionLink("Cadastrar", "Cadastrar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GrupoEstabelecimento.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GrupoEstabelecimento.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.Id }) |
            @Html.ActionLink("Deletar", "Deletar", new { id=item.Id })
        </td>
    </tr>
}

</table>
