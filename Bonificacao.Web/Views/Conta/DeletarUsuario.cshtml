@model Bonificacao.Data.Pessoa
@{ ViewBag.Title = "Deletar Usuário"; }

@Html.Box("Deletar Usuário", null,
    @<text>
        <h3>Tem certeza que deseja deletar esse usuário?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nome)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Usuario)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Usuario)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Deletar" class="btn btn-default" /> |
                    @Html.ActionLink("Voltar para usuários", "Usuarios", "Conta")
                </div>
            }
        </div>
    </text>)
