@model Bonificacao.Web.Models.LoginModel

@{
    ViewBag.Title = "Login";
}


<div class="middle-box loginscreen">
    <div>
        <div class="text-center">
            <h1 class="logo-name"><i class="fa fa-car"></i></h1>
            <div class="text-center">
                <h3>Bonificação</h3>
            </div>
        </div>

        @using (Html.BeginForm("login", "conta", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.LabelFor(model => model.Usuario, new { @class = "sr-only" })
            @Html.TextBoxFor(model => model.Usuario, new { @class = "form-control", placeholder = "Usuário" })
            @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
            @Html.LabelFor(model => model.Senha, new { @class = "sr-only" })
            @Html.PasswordFor(model => model.Senha, new { @class = "form-control", placeholder = "Senha" })
            @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
            <div class="checkbox">
                <label>@Html.CheckBoxFor(model => model.Lembrar, false) Mantenha-me conectado</label>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
            </div>
            @Html.ActionLink("Não possui cadastro?", "Cadastro")
        }
    </div>
</div>

