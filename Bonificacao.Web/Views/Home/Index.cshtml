@{
    ViewBag.Title = "Home";
}

<div class="row">
    @switch ((Bonificacao.Data.TipoPessoa)ViewBag.TipoUsuario)
    {
        case Bonificacao.Data.TipoPessoa.Cliente:
            <text>
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="ibox">
                                <div class="ibox-content">
                                    <h2>Indicar um amigo</h2>
                                    <small>Nessa área você pode convidar seus amigos para abastecerem em algum posto e ainda ganhar bonus a cada litro abastecido</small>
                                    @{Html.RenderAction("Indicar", "Indicacoes");}
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="ibox">
                                <div class="ibox-content">
                                    <h2>Minhas indicações</h2>
                                    <small>Abaixo você encontra as pessoas que você já indicou</small>
                                    @{Html.RenderAction("MinhasIndicacoes", "Indicacoes");}
                                </div>
                            </div>
                            @{ Html.RenderAction("MeuSaldo", "Movimentacao"); }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="ibox">
                                <div class="ibox-content">
                                    <h2>Visualizar movimentações</h2>
                                    <small>Aqui você pode ver as movimentações do sistema, utilizando também filtros por data e cliente</small>
                                    @{ Html.RenderAction("BuscaMovimentacao", "Movimentacao"); }
                                    @{ Html.RenderAction("Lista", "Movimentacao"); }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </text>
            break;
        case Bonificacao.Data.TipoPessoa.Administrador:
            <text>
                <div class="col-lg-12">
                    <div class="row">

                        <div class="col-lg-6">
                            <div class="ibox float-e-margins">
                                <div class="ibox-title">
                                    <span class="label label-primary pull-right">Agora</span>
                                    <h5>Vendas por estabelecimento</h5>
                                </div>
                                <div class="ibox-content">
                                    <div class="row">
                                        <div class="col-md-12">
                                            @{ Html.RenderAction("VendasEstabelecimento", "Estabelecimentos"); }
                                            @*<h1 class="no-margins">@string.Format(new System.Globalization.CultureInfo("pt-BR"), "{0:c2}", Model)</h1>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="ibox float-e-margins">
                                <div class="ibox-title">
                                    <span class="label label-primary pull-right">Agora</span>
                                    <h5>Bônus por estabelecimento</h5>
                                </div>
                                <div class="ibox-content">
                                    <div class="row">
                                        <div class="col-md-12">
                                            @{ Html.RenderAction("BonusEstabelecimento", "Estabelecimentos"); }
                                            @*<h1 class="no-margins">@string.Format(new System.Globalization.CultureInfo("pt-BR"), "{0:c2}", Model)</h1>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="ibox">
                                <div class="ibox-content">
                                    <h2>Visualizar movimentações</h2>
                                    <small>Aqui você pode ver as movimentações do sistema, utilizando também filtros por data e cliente</small>
                                    @{ Html.RenderAction("BuscaMovimentacao", "Movimentacao"); }
                                    @{ Html.RenderAction("Lista", "Movimentacao"); }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </text>
            break;
        default: break;
    }
</div>

@section Scripts {
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#Clientes').multiselect({
                nonSelectedText: '-- Selecione --',
                allSelectedText: 'Todos'
            });
            $('#DataInicio').datepicker({
                language: "pt-BR",
                format: "dd/mm/yyyy"
            });
            $('#DataFim').datepicker({
                language: "pt-BR",
                format: "dd/mm/yyyy"
            });
        });
    </script>
}
